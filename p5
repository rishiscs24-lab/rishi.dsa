#include <stdio.h>
#include <stdlib.h>

struct node {
    int data;
    struct node *next;
};

void push(struct node **head_ref, int new_data) {
    struct node *new_node = (struct node*)malloc(sizeof(struct node));
    new_node->data = new_data;
    new_node->next = *head_ref;
    *head_ref = new_node;
}

void append(struct node **head_ref, int new_data) {
    struct node *new_node = (struct node*)malloc(sizeof(struct node));
    struct node *last = *head_ref;

    new_node->data = new_data;
    new_node->next = NULL;

    if (*head_ref == NULL) {
        *head_ref = new_node;
        return;
    }

    while (last->next != NULL)
        last = last->next;

    last->next = new_node;
}

void deleteFirst(struct node **head_ref) {
    if (*head_ref == NULL)
        return;
    struct node *temp = *head_ref;
    *head_ref = (*head_ref)->next;
    free(temp);
}

void deleteLast(struct node **head_ref) {
    if (*head_ref == NULL)
        return;

    struct node *temp = *head_ref;

    if (temp->next == NULL) {
        free(temp);
        *head_ref = NULL;
        return;
    }

    while (temp->next->next != NULL)
        temp = temp->next;

    free(temp->next);
    temp->next = NULL;
}

void deleteSpecific(struct node **head_ref, int key) {
    struct node *temp = *head_ref;
    struct node *prev = NULL;

    if (temp != NULL && temp->data == key) {
        *head_ref = temp->next;
        free(temp);
        return;
    }

    while (temp != NULL && temp->data != key) {
        prev = temp;
        temp = temp->next;
    }

    if (temp == NULL)
        return;

    prev->next = temp->next;
    free(temp);
}

void printlist(struct node *node) {
    while (node != NULL) {
        printf("%d ", node->data);
        node = node->next;
    }
}

int main() {
    struct node *head = NULL;

    append(&head, 6);
    push(&head, 7);
    push(&head, 1);
    append(&head, 4);

    printf("\nCreated linked list: ");
    printlist(head);

    deleteFirst(&head);
    printf("\nAfter deleting first: ");
    printlist(head);

    deleteLast(&head);
    printf("\nAfter deleting last: ");
    printlist(head);

    deleteSpecific(&head, 7);
    printf("\nAfter deleting 7: ");
    printlist(head);

    return 0;
}

