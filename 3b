#include <stdio.h>

#define SIZE 5

int cq[SIZE];
int front = -1, rear = -1;

void insert()
{
    int item;
    if ((rear + 1) % SIZE == front)
    {
        printf("Queue Overflow\n");
        return;
    }

    printf("Enter element: ");
    scanf("%d", &item);

    if (front == -1)
        front = 0;

    rear = (rear + 1) % SIZE;
    cq[rear] = item;
}

void delete()
{
    if (front == -1)
    {
        printf("Queue Empty\n");
        return;
    }

    printf("Deleted element: %d\n", cq[front]);

    if (front == rear)
        front = rear = -1;
    else
        front = (front + 1) % SIZE;
}

void display()
{
    int i;

    if (front == -1)
    {
        printf("Queue Empty\n");
        return;
    }

    printf("Queue elements: ");
    i = front;
    while (1)
    {
        printf("%d ", cq[i]);
        if (i == rear)
            break;
        i = (i + 1) % SIZE;
    }
    printf("\n");
}

int main()
{
    int choice;

    while (1)
    {
        printf("\n1.Insert  2.Delete  3.Display  4.Exit\n");
        printf("Enter choice: ");
        scanf("%d", &choice);

        switch (choice)
        {
            case 1: insert(); break;
            case 2: delete(); break;
            case 3: display(); break;
            case 4: return 0;
            default: printf("Invalid choice\n");
        }
    }
}




1.Insert  2.Delete  3.Display  4.Exit
Enter choice: 1
Enter element: 2

1.Insert  2.Delete  3.Display  4.Exit
Enter choice: 3
Queue elements: 2 

1.Insert  2.Delete  3.Display  4.Exit
Enter choice: 2
Deleted element: 2
